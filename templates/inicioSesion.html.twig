	<script src="./js/scriptInicioSesion.js"></script>
{% endblock %}
{% block contenido %}
	<div class="content-wrap">
		<section id="login" class="clearfix">
			<div class="col-6 justify-content-center offset-3" id="cardG">
				<div class="card card-4">
					<form method="post" action="{{ path('logging') }}" id="loginform">
						<h1>Login</h1>
						<div class="form-group">
							<label>Correo Electronico
								<span class="required">*</span>
							</label>
							<input name="user" style="width:300px" type="email" class="form-control" id="user" aria-describedby="emailHelp" placeholder="Enter email" value="{{ app.session.get('username') }}"/>
						</div>
						<div class="form-group">
							<label>Contraseña
								<span class="required">*</span>
							</label>
							<input name="password" style="width:300px" type="password" class="form-control" id="password" placeholder="Password" value=""/>
						</div>
						<div>
							<input type="submit" value="Entrar" class="button">
							<input type="reset" value="Reset" class="button">
						</div>
						<p style="color:white;" class="text-center">
							Si no tiene cuenta
							<a href="/registro">registrese aquí.</a>
						</p>
					</form>
				</div>
			</section>
		</div>
